<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_item_padding_bottom"
    android:paddingEnd="@dimen/list_item_padding_right"
    android:paddingLeft="@dimen/list_item_padding_left"
    android:paddingRight="@dimen/list_item_padding_right"
    android:paddingStart="@dimen/list_item_padding_left"
    android:paddingTop="@dimen/list_item_padding_top">

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_image_height" />

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingRight="@dimen/text_view_padding"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        android:layout_marginLeft="@dimen/text_view_margin"
        android:layout_marginStart="@dimen/text_view_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_recipe_image"
        app:layout_constraintTop_toTopOf="@+id/iv_recipe_image" />

    <TextView
        android:id="@+id/tv_recipe_servings_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_margin"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingRight="@dimen/text_view_padding"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        android:textColor="@color/colorText"
        android:textSize="@dimen/small_font_size"
        android:text="@string/servings_label"
        app:layout_constraintStart_toStartOf="@+id/tv_recipe_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipe_name" />

    <TextView
        android:id="@+id/tv_recipe_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin"
        android:layout_marginStart="@dimen/text_view_margin"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        android:textColor="@color/colorText"
        android:textSize="@dimen/small_font_size"
        app:layout_constraintStart_toEndOf="@+id/tv_recipe_servings_label"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_servings_label" />

</android.support.constraint.ConstraintLayout>