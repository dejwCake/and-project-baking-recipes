<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_view_margin"
        android:layout_marginStart="@dimen/text_view_margin"
        android:layout_marginTop="@dimen/text_view_margin"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingRight="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        app:layout_constraintEnd_toStartOf="@+id/tv_ingredient_quantity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/text_view_padding"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ingredient_name" />

</android.support.constraint.ConstraintLayout>